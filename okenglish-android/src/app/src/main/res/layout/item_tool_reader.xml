<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/tool_item_reader_img_size"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/tool_reader_item_img"
        android:layout_width="@dimen/tool_item_reader_img_size"
        android:layout_height="@dimen/tool_item_reader_img_size"></ImageView>

    <TextView
        android:id="@+id/tool_reader_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tool_item_reader_title_size"></TextView>
</LinearLayout>